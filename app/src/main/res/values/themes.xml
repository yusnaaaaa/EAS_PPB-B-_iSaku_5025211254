<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ISaku" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your light theme here. -->
         <item name="colorPrimary">#018CCF</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorOnPrimary">@color/blue</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:statusBarColor">@color/blue</item>
        <item name="android:toolbarStyle">@color/white</item>
        <item name="toolbarStyle">@style/AppToolbar</item>
        <item name="android:actionBarTheme">?attr/colorOnPrimary</item>
    </style>

    <style name="Theme.ISaku" parent="Base.Theme.ISaku" />

    <style name="AppToolbar" parent="Widget.MaterialComponents.Toolbar.Surface">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="titleTextColor">@color/blue</item>
        <item name="subtitleTextColor">?attr/colorPrimary</item>
        <item name="android:elevation">0dp</item>
    </style>
</resources>